<?xml version="1.0" encoding="utf-8"?>


<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:andriod="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/elevetion_actionbar"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivHuella"
            android:layout_width="@dimen/ancho_huella"
            android:layout_height="wrap_content"
            android:src="@drawable/huella"
            />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="@dimen/ancho_titulo"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tamaÃ±o_letra_titulo"
            android:textStyle="bold"
            android:textColor="@color/colorBlanco"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnTopFive"
            android:layout_height="@dimen/alto_FAB"
            android:layout_width="wrap_content"
            android:src="@drawable/estrella"
            andriod:text="@string/app_name"
            android:elevation="@dimen/elevetion_actionbar"
            />
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>